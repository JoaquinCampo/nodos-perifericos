// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    ADMIN
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Clinic {
    id            String    @id @default(cuid())
    name          String
    address       String? 
    phone         String?
    email         String?
    image         String?

    users         User[]
    configuration Configuration?

    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt @default(now())

    clinicalDocuments ClinicalDocument[]
}

model User {
    id            String    @id @default(cuid())
    ci            String 
    name          String
    email         String    
    phone         String?
    emailVerified DateTime?
    password      String?   
    image         String?   
    accounts      Account[]
    sessions      Session[]

    clinicId      String?
    clinic        Clinic?   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
    healthWorker HealthWorker?
    clinicAdmin ClinicAdmin?

    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt @default(now())

    @@unique([email, clinicId], name: "unique_email_per_clinic")
    @@unique([ci, clinicId], name: "unique_ci_per_clinic")
    @@unique([phone, clinicId], name: "unique_phone_per_clinic")
    @@index([clinicId])
}

model HealthWorker {
    id            String    @id @default(cuid())
    userId        String    @unique
    user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt @default(now())

    healthWorkerClinicalDocuments HealthWorkerClinicalDocument[]
}

model ClinicAdmin {
    id            String    @id @default(cuid())
    userId        String    @unique
    user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt @default(now())
}

model ClinicalDocument {
    id            String    @id @default(cuid())
    clinicId      String
    clinic        Clinic    @relation(fields: [clinicId], references: [id], onDelete: Cascade)

    healthUserId String

    title         String
    description   String?
    content       String?   @db.Text
    contentUrl    String?
    contentType   String?

    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt @default(now())

    healthWorkerClinicalDocuments HealthWorkerClinicalDocument[]
}

model HealthWorkerClinicalDocument {
    id            String    @id @default(cuid())

    clinicalDocumentId String
    clinicalDocument ClinicalDocument @relation(fields: [clinicalDocumentId], references: [id], onDelete: Cascade)

    healthWorkerId String
    healthWorker HealthWorker @relation(fields: [healthWorkerId], references: [id], onDelete: Cascade)
}



model Configuration {
    id                String    @id @default(cuid())
    clinicId          String    @unique
    clinic            Clinic    @relation(fields: [clinicId], references: [id], onDelete: Cascade)
    
    // Branding
    logo              String?   // URL or path to logo image
    title             String?   // Custom title for the clinic portal
    favicon           String?   // URL or path to favicon
    
    // Colors (stored as hex values, e.g., #FF5733)
    primaryColor      String?   @default("#3B82F6")      // Main brand color
    secondaryColor    String?   @default("#10B981")      // Secondary accent color
    headerColor       String?   @default("#1F2937")      // Header background color
    backgroundColor   String?   @default("#F9FAFB")      // Page background color
    sidebarColor      String?   @default("#FFFFFF")      // Sidebar background color
    textColor         String?   @default("#111827")      // Primary text color
    linkColor         String?   @default("#3B82F6")      // Link color
    buttonColor       String?   @default("#3B82F6")      // Primary button color
    buttonTextColor   String?   @default("#FFFFFF")      // Button text color
    
    // Typography
    fontFamily        String?   @default("Inter")        // Font family name
    fontSize          String?   @default("16px")         // Base font size
    
    // Layout
    headerHeight      String?   @default("64px")         // Header height
    sidebarWidth      String?   @default("256px")        // Sidebar width
    borderRadius      String?   @default("8px")          // Border radius for elements
    
    createdAt         DateTime  @default(now())
    updatedAt         DateTime  @updatedAt @default(now())
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
