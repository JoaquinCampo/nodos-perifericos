// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Clinic {
    id      String @id @default(cuid())
    name    String
    address String
    phone   String
    email   String
    providerName String?

    users             User[]
    configuration     Configuration?

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model User {
    id            String    @id @default(cuid())
    ci            String?
    firstName     String
    lastName      String
    email         String
    phone         String?
    address       String?
    dateOfBirth   DateTime?
    emailVerified DateTime?
    password      String?
    image         String?
    accounts      Account[]
    sessions      Session[]

    clinicId     String
    clinic       Clinic       @relation(fields: [clinicId], references: [id], onDelete: Cascade)
    healthWorker HealthWorker?
    clinicAdmin  ClinicAdmin?

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    @@unique([email, clinicId], name: "unique_email_per_clinic")
    @@unique([ci, clinicId], name: "unique_ci_per_clinic")
    @@unique([phone, clinicId], name: "unique_phone_per_clinic")
    @@index([clinicId])
}

model HealthWorker {
    id     String @id @default(cuid())
    userId String @unique
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    healthWorkerSpecialities HealthWorkerSpeciality[]
    conversations Conversation[]
}

model ClinicAdmin {
    id     String @id @default(cuid())
    userId String @unique
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model HealthWorkerSpeciality {
    id String @id @default(cuid())
    healthWorkerId String
    healthWorker HealthWorker @relation(fields: [healthWorkerId], references: [id], onDelete: Cascade)
    specialityId String
    speciality Speciality @relation(fields: [specialityId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Speciality {
    id String @id @default(cuid())
    name String

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    healthWorkerSpecialities HealthWorkerSpeciality[]

    @@unique([name])
}

model Configuration {
    id       String @id @default(cuid())
    clinicId String @unique
    clinic   Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

    // Branding
    portalTitle String @default("Portal de Cl√≠nica") // Custom title for the clinic portal (shown in browser tab)

    // Customizable colors (stored as hex values, e.g., #FF5733)
    sidebarTextColor       String @default("#111827") // Sidebar text color (slate-800)
    sidebarBackgroundColor String @default("#F1F5F9") // Sidebar background color (slate-100)
    backgroundColor        String @default("#F8FAFC") // Main page background color (slate-50)
    cardBackgroundColor    String @default("#FFFFFF") // Card background color (white)
    cardTextColor          String @default("#111827") // Card text color (slate-800)
    iconTextColor          String @default("#FFFFFF") // Icon text color (white)
    iconBackgroundColor    String @default("#3B82F6") // Icon background color (blue-500, also used for selected path)

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Conversation {
    id              String    @id @default(cuid())
    healthUserCi    String
    healthWorkerId  String
    healthWorker    HealthWorker @relation(fields: [healthWorkerId], references: [id], onDelete: Cascade)
    
    messages        Message[]
    
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @default(now()) @updatedAt

    @@index([healthUserCi])
    @@index([healthWorkerId])
}

model Message {
    id              String    @id @default(cuid())
    conversationId  String
    conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
    
    role            String    // "user" or "assistant"
    content         String    @db.Text
    
    createdAt       DateTime  @default(now())

    @@index([conversationId])
}


